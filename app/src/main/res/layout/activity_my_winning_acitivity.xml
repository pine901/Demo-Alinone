                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:text="Games"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:background="@drawable/d_orange_corner"
