<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/d_pop_setting"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/pop_up_top_margin"
        android:layout_below="@+id/rtl_toolbar"
        android:layout_marginHorizontal="25dp"
        android:padding="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"

            >


            <com.gamegards.allinonev3.Utils.TextViewWithFont
                android:id="@+id/txtYouhave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU HAVE CHIPS"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_below="@+id/txtYouhave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgchipps"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chipp"
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"
                    />

                <com.gamegards.allinonev3.Utils.TextViewWithFont
                    android:id="@+id/txtwalletchips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOU HAVE CHIPS"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <com.gamegards.allinonev3.Utils.TextViewWithFont
                android:id="@+id/txtStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="#ffffff"
                android:layout_above="@+id/seekBar1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <com.gamegards.allinonev3.Utils.TextViewWithFont
                android:id="@+id/txtLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/seekBar1"
                android:textColor="#ffffff"
                android:text="250k"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="1500"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:indeterminate="false"
                android:progress="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/seekBar1">


                <com.gamegards.allinonev3.Utils.TextViewWithFont
                    android:id="@+id/txtBootamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boot amount : 0"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <com.gamegards.allinonev3.Utils.TextViewWithFont
                    android:id="@+id/txtPotLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff"
                    android:text="Pot limit : 0"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/seekBar1">


                <com.gamegards.allinonev3.Utils.TextViewWithFont
                    android:id="@+id/txtNumberofBlind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Blinds : 4"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="15dp"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <com.gamegards.allinonev3.Utils.TextViewWithFont
                    android:id="@+id/txtMaximumbetvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="#ffffff"
                    android:text="Maximumbet balue : 0"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgCreatetable"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lnrmax"
                android:src="@drawable/create_table_btn"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rtl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/imgclosetop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            />

        <RelativeLayout
            android:id="@+id/img_diaProfile"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:src="@drawable/app_icon"
            android:background="@drawable/strip_bg"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            >

            <com.gamegards.allinonev3.Utils.TextViewWithFont
                android:id="@+id/txtheader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GIFTS"
                android:textColor="@color/Golder_yellow"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>